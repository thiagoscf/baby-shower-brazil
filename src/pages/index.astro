      Obrigado por celebrar conosco! ðŸ’–
    </footer>

    <script>
      // Message form JS (kept same logic)
      const form = document.getElementById('messageForm');
      const messagesDiv = document.getElementById('messages');
      const confirmation = document.getElementById('confirmation');
      const maxMessages = 10;

      form.addEventListener('submit', (e) => {
        e.preventDefault();
        const name = document.getElementById('name').value.trim();
        const message = document.getElementById('message').value.trim();
        if(name && message){
          const msgDiv = document.createElement('div');
          msgDiv.className = 'message';
          msgDiv.textContent = `${name}: ${message}`;
          messagesDiv.prepend(msgDiv);

          const allMessages = messagesDiv.querySelectorAll('.message');
          if(allMessages.length > maxMessages){
            messagesDiv.removeChild(allMessages[allMessages.length - 1]);
          }

          form.reset();

          confirmation.style.display = 'block';
          setTimeout(() => {
            confirmation.style.display = 'none';
          }, 3000);

          messagesDiv.scrollTop = 0;
        }
      });
    </script>
