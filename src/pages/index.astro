---
const products = [
  { id: 1, title: "Kit SOS Fraldas", image: "/gifts/fraldas.png", description: "Porque acidentes acontecem... e vão acontecer MUITO! 💩", price: "R$25", bgGradient: "linear-gradient(135deg, #ffd6e8, #ffb3d1)", borderColor: "#ff99cc" },
  { id: 2, title: "Spa do Bebê", image: "/gifts/kit-banho.png", description: "Sabonete, shampoo e toalhinha para transformar o banho em um dia de princesa 🛁👑", price: "R$50", bgGradient: "linear-gradient(135deg, #fff4b3, #ffeb66)", borderColor: "#ffdb66" },
  { id: 3, title: "Look do Dia (Bebê Fashion Week)", image: "/gifts/roupinha.png", description: "Macacãozinho fofo para estrelar o próximo desfile da sala de estar 👗✨", price: "R$100", bgGradient: "linear-gradient(135deg, #b3e0ff, #66c3ff)", borderColor: "#66b3ff" },
  { id: 4, title: "Combo MasterChef Baby", image: "/gifts/mamadeira.png", description: "Mamadeiras, chupetas e tudo que um mini masterchef precisa para suas receitas de leite 🍶👶", price: "R$250", bgGradient: "linear-gradient(135deg, #b3ffd9, #66ffb3)", borderColor: "#66ffb3" },
  { id: 5, title: "Trono Real da Papinha", image: "/gifts/cadeira.png", description: "Cadeirinha de alimentação para o bebê se sentir o rei da refeição 🍽️👑", price: "R$500", bgGradient: "linear-gradient(135deg, #e8b3ff, #c780ff)", borderColor: "#cc99ff" },
  { id: 6, title: "Ferrari do Bebê", image: "/gifts/carrinho.png", description: "Carrinho para os primeiros rolês de estilo pela vizinhança 🏎️✨", price: "R$1000", bgGradient: "linear-gradient(135deg, #ffc27f, #ff9e4d)", borderColor: "#ff9966" },
];

const pixCode = "thiagoscf@gmail.com";

function priceColor(price) {
  const value = parseInt(price.replace(/[^\d]/g, ''), 10);
  if (value <= 100) return "#ff3399";
  if (value <= 500) return "#9900cc";
  return "#cc0000";
}
---

<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Chá de Bebê da Emily</title>
    <style>
      /* ... seu estilo atual permanece igual ... */
    </style>
  </head>
  <body>
    <header>
      <h1>🎀 Bem-vindos ao Chá de Bebê da Emily! 🎀</h1>
      <p>Escolha um presente divertido e contribua para a alegria da família! 🍼💖</p>
    </header>

    <main class="product-grid">
      {products.map((product) => (
        <div class="product-card" style={{background: product.bgGradient, border: `4px solid ${product.borderColor}`}}>
          <div>
            <img src={product.image} alt={product.title} loading="lazy" />
            <h2>{product.title}</h2>
            <div class="price" style={{color: priceColor(product.price)}}>{product.price}</div>
            <p>{product.description}</p>
          </div>
          <div class="icon-group">
            <!-- Botão sem onclick inline -->
            <button class="copy-btn">
              Copiar código PIX
            </button>
          </div>
        </div>
      ))}
    </main>

    <div id="toast" class="toast">✅ Código PIX copiado!</div>

    <footer>
      Obrigado por celebrar conosco! 💖
    </footer>

    <script>
      // Seleciona todos os botões e adiciona o evento de clique
      const buttons = document.querySelectorAll(".copy-btn");
      const toast = document.getElementById("toast");

      buttons.forEach(btn => {
        btn.addEventListener("click", () => {
          navigator.clipboard.writeText("thiagoscf@gmail.com").then(() => {
            toast.classList.add("show");
            setTimeout(() => toast.classList.remove("show"), 2000);
          });
        });
      });
    </script>
  </body>
</html>
