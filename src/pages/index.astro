---
const products = [
  { id: 1, title: "Kit SOS Fraldas", image: "/gifts/fraldas.png", description: "Porque acidentes acontecem... e vão acontecer MUITO! 💩", price: "R$25", bgGradient: "linear-gradient(135deg, #ffd6e8, #ffb3d1)", borderColor: "#ff99cc" },
  { id: 2, title: "Spa do Bebê", image: "/gifts/kit-banho.png", description: "Sabonete, shampoo e toalhinha para transformar o banho em um dia de princesa 🛁👑", price: "R$50", bgGradient: "linear-gradient(135deg, #fff4b3, #ffeb66)", borderColor: "#ffdb66" },
  { id: 3, title: "Look do Dia (Bebê Fashion Week)", image: "/gifts/roupinha.png", description: "Macacãozinho fofo para estrelar o próximo desfile da sala de estar 👗✨", price: "R$100", bgGradient: "linear-gradient(135deg, #b3e0ff, #66c3ff)", borderColor: "#66b3ff" },
  { id: 4, title: "Combo MasterChef Baby", image: "/gifts/mamadeira.png", description: "Mamadeiras, chupetas e tudo que um mini masterchef precisa para suas receitas de leite 🍶👶", price: "R$250", bgGradient: "linear-gradient(135deg, #b3ffd9, #66ffb3)", borderColor: "#66ffb3" },
  { id: 5, title: "Trono Real da Papinha", image: "/gifts/cadeira.png", description: "Cadeirinha de alimentação para o bebê se sentir o rei da refeição 🍽️👑", price: "R$500", bgGradient: "linear-gradient(135deg, #e8b3ff, #c780ff)", borderColor: "#cc99ff" },
  { id: 6, title: "Ferrari do Bebê", image: "/gifts/carrinho.png", description: "Carrinho para os primeiros rolês de estilo pela vizinhança 🏎️✨", price: "R$1000", bgGradient: "linear-gradient(135deg, #ffc27f, #ff9e4d)", borderColor: "#ff9966" },
];

const pixCode = "thiagoscf@gmail.com";

function priceColor(price) {
  const value = parseInt(price.replace(/[^\d]/g, ''), 10);
  if (value <= 100) return "#ff3399";
  if (value <= 500) return "#9900cc";
  return "#cc0000";
}
---

<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Chá de Bebê da Emily</title>
    <style>
      body { font-family: 'Comic Sans MS', sans-serif; background: linear-gradient(to bottom, #ffe6f0, #fff0f5); display:flex; flex-direction:column; align-items:center; min-height:100vh; margin:0; padding:2rem; color:#333; }
      header { text-align:center; margin-bottom:2rem; }
      h1 { font-size:3rem; margin-bottom:0.5rem; color:#4d1a4d; text-shadow:2px 2px 4px rgba(0,0,0,0.3); }
      h2 { font-size:1.5rem; margin:0.5rem 0; color:#4d1a4d; text-shadow:1.5px 1.5px 3px rgba(0,0,0,0.25); }
      p { color:#555; font-size:1rem; }
      .price { font-size:1.2rem; font-weight:bold; margin-bottom:0.5rem; text-shadow:1px 1px 2px rgba(0,0,0,0.25); }
      .product-grid { display:grid; grid-template-columns:repeat(3,1fr); gap:1.5rem; width:100%; max-width:900px; }
      .product-card { padding:1.5rem; border-radius:1.5rem; display:flex; flex-direction:column; justify-content:space-between; transition: transform 0.3s, box-shadow 0.3s; }
      .product-card:hover { transform:translateY(-5px); box-shadow:0 10px 20px rgba(0,0,0,0.15); }
      .product-card img { width:150px; height:150px; object-fit:contain; margin-bottom:1rem; border-radius:1rem; border:4px solid #ffb6c1; background:#fff0f5; }
      .icon-group { display:flex; justify-content:center; margin-top:0.5rem; }
      .copy-btn { background:none; color:#ff69b4; font-size:1rem; font-weight:bold; border:2px dashed #ff69b4; border-radius:0.8rem; padding:0.6rem 1rem; cursor:pointer; transition: background 0.3s, transform 0.2s, color 0.3s; }
      .copy-btn:hover { background:#ff69b4; color:white; transform:scale(1.05); }
      .toast { position:fixed; bottom:1rem; left:50%; transform:translateX(-50%) translateY(20px); background:#ff69b4; color:white; padding:0.8rem 1.2rem; border-radius:0.8rem; box-shadow:0 4px 10px rgba(0,0,0,0.2); font-weight:bold; opacity:0; transition: opacity 0.3s ease, transform 0.3s ease; z-index:9999; }
      .toast.show { opacity:1; transform:translateX(-50%) translateY(0); }
      footer { margin-top:2rem; text-align:center; font-size:1rem; color:#ff69b4; }
      @media (max-width:900px) { .product-grid { grid-template-columns:repeat(2,1fr); } }
      @media (max-width:480px) { .product-grid { grid-template-columns:1fr; } .product-card img { width:140px; height:140px; } }
    </style>
  </head>
  <body>
    <header>
      <h1>🎀 Bem-vindos ao Chá de Bebê da Emily! 🎀</h1>
      <p>Escolha um presente divertido e contribua para a alegria da família! 🍼💖</p>
    </header>

    <main class="product-grid">
      {products.map((product) => (
        <div class="product-card" style={{background: product.bgGradient, border: `4px solid ${product.borderColor}`}}>
          <div>
            <img src={product.image} alt={product.title} loading="lazy" />
            <h2>{product.title}</h2>
            <div class="price" style={{color: priceColor(product.price)}}>{product.price}</div>
            <p>{product.description}</p>
          </div>
          <div class="icon-group">
            <button class="copy-btn">
              Copiar código PIX
            </button>
          </div>
        </div>
      ))}
    </main>

    <div id="toast" class="toast">✅ Código PIX copiado!</div>

    <footer>
      Obrigado por celebrar conosco! 💖
    </footer>

    <script>
      // Adiciona o evento de clique **client-side**
      document.querySelectorAll('.copy-btn').forEach(btn => {
        btn.addEventListener('click', () => {
          navigator.clipboard.writeText("thiagoscf@gmail.com").then(() => {
            const toast = document.getElementById('toast');
            toast.classList.add('show');
            setTimeout(() => toast.classList.remove('show'), 2000);
          });
        });
      });
    </script>
  </body>
</html>
